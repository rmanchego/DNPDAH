<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/login_transparante">
    <TextView
        android:id="@+id/perfilpacientetitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del paciente"

        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/fotoQrcodePerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/perfilpacientetitulo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/perfilpacientetitulo"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:id="@+id/fotoPacientePerfil"
        android:layout_toRightOf="@id/fotoQrcodePerfil"/>

    <TextView
        android:layout_below="@id/fotoQrcodePerfil"
        android:id="@+id/tvFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo QR"
        android:layout_marginLeft="85dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_below="@id/fotoQrcodePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto del paciente"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@id/tvFoto"
        android:layout_marginLeft="55dp"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/fotoQrcodePerfil"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fotoQrcodePerfil"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/txtPacienteNombrePerfil"
            android:text="Nombres: "
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fotoQrcodePerfil"
        android:gravity="center"
        android:id="@+id/txtPacienteNombrePerfil"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:layout_below="@id/txtPacienteNombrePerfil"
            android:layout_toLeftOf="@id/txtPacienteNombrePerfil"
            android:text="Fecha de Nacimiento:"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/txtPacienteFechaDeNacimientoPerfil"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtPacienteGeneroPerfil"
            android:text="Genero:"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/txtPacienteGeneroPerfil"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtPacientePesoPerfil"
            android:text="Peso:"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:id="@+id/txtPacientePesoPerfil"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPacientePesoPerfil"
            android:layout_toLeftOf="@id/txtPacienteAlturaPerfil"
            android:text="Altura:"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:layout_below="@+id/txtPacientePesoPerfil"
        android:gravity="center"
            android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:id="@+id/txtPacienteAlturaPerfil"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear5"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPacienteAlturaPerfil"
            android:layout_toLeftOf="@id/txtPacientePresionPerfil"
            android:text="PresiÃ³n: "
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint=""
        android:layout_below="@+id/txtPacienteAlturaPerfil"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:textSize="17dp"

        android:id="@+id/txtPacientePresionPerfil"/>
    </LinearLayout>

    </RelativeLayout>


</RelativeLayout>