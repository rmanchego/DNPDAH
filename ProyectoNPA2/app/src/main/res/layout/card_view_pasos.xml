
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:gravity="center">


    <RelativeLayout
        android:id="@+id/layaoutPrincipal1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloNumeroPasos"
            android:text="N° Pasos"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"

            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"

            />
        <TextView
            android:id="@+id/txtNumeroPasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N° Pasos"
            android:layout_marginTop="7dp"
            android:textColor="#000"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/tituloNumeroPasos"
            android:textSize="14sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloDuracion"
            android:text="Duración"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/tituloNumeroPasos"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"

            />

        <TextView
            android:id="@+id/txtDuracionPasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duracion"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="7dp"

            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/txtNumeroPasos"
            android:layout_toEndOf="@id/tituloNumeroPasos"
            android:layout_weight="1"
            android:layout_below="@id/tituloDuracion"
            android:textAlignment="center"

            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloFecha"
            android:text="Fecha"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tituloDuracion"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"

            />

        <TextView
            android:id="@+id/txtFechaMesPasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_toRightOf="@id/txtDuracionPasos"
            android:layout_toEndOf="@id/tituloDuracion"
            android:layout_below="@id/tituloFecha"
            android:text="Fecha"
            android:textColor="#000000"
            android:textAlignment="center"

            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/txtFechaHoraPasos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"

            android:textColor="#a9a9a9"
            android:textSize="14sp"
            android:layout_marginLeft="44dp"
            android:textAlignment="center"

            android:layout_toEndOf="@id/tituloDuracion"


            android:layout_below="@id/txtFechaMesPasos"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>

