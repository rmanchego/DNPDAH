<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.FotosUbicacion.UbicacionActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/servicioubicacion"
        android:layout_weight="2"/>

    <TableRow android:padding="10dip"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Aqui describiriamos lo que se debe hacer, algo así, y en la imagen sería poner un video de como usar, algo así." />



    </TableRow>

    <Button
        android:id="@+id/idUbicacionbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/icon_localizacion"
        android:drawablePadding="8dp"
        android:textColor="@android:color/white"
        android:text="Obtener tu ubicación"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"

        android:background="@drawable/borde_redondo"/>

    <Button
        android:id="@+id/idHistorialFotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:textColor="@android:color/white"
        android:text="Obtener tu ubicación"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"

        android:background="@drawable/borde_redondo"/>




</TableLayout>